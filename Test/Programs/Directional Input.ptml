; Use directional arrow keys to move the blinking cursor

; Define blinking cursor character
CHR 2 0xff 0x81 0xbd 0xa5 0xa5 0xbd 0x81 0xff
;CHRL 2 0 0b11111111
;CHRL 2 1 0b10000001
;CHRL 2 2 0b10111101
;CHRL 2 3 0b10100101
;CHRL 2 4 0b10100101
;CHRL 2 5 0b10111101
;CHRL 2 6 0b10000001
;CHRL 2 7 0b11111111

; Define colors
PAL 0 0x000000
PAL 1 0x808080
PAL 2 0xffffff

VAR bgc 0x80
CLS bgc

; Declare variables
VAR key
VAR x 0
VAR y 0
VAR fgc 1
VAR ctr_blink 0

loop:
	OUT 2 x y fgc 0 0
	INP key
	CMP key SYS.KEY_UP
	CALL= key_up_handler
	CMP key SYS.KEY_DOWN
	CALL= key_down_handler
	CMP key SYS.KEY_RIGHT
	CALL= key_right_handler
	CMP key SYS.KEY_LEFT
	CALL= key_left_handler
	CMP key SYS.KEY_ESC
	CALL= reset
	INC ctr_blink
	CMP ctr_blink 1000
	JP!= loop
	SET ctr_blink 0
	INC fgc
	CMP fgc 3
	CALL= reset_fgc
	JP loop
	
reset_fgc:
	SET fgc 1
	RET
	
key_up_handler:
	DEC y
	CLS bgc
	RET
key_down_handler:
	INC y
	CLS bgc
	RET
key_right_handler:
	INC x
	CLS bgc
	RET
key_left_handler:
	DEC x
	CLS bgc
	RET

reset:
	RESET